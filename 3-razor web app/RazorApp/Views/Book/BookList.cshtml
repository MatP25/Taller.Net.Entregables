@{
    ViewData["Title"] = "Book List";
}

<section>
    <h2 class="text-center mt-3 mb-3">Books</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Published Date</th>
                <th>ISBN</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.PublishedDate.ToShortDateString()</td>
                    <td>@book.Isbn</td>
                    <td>
                        <a asp-controller="Book" 
                            asp-action="GetBookByIsbn"
                            asp-route-isbn="@book.Isbn"
                            class="btn btn-info btn-sm">
                            View Details
                        </a>
                    </td>
                    <td>
                        <form asp-action="DeleteBook">
                            <input type="hidden" name="isbn" value="@book.Isbn" readonly/>
                            <button 
                                class="btn btn-danger btn-sm" 
                                type="submit"
                                onclick="return confirm('Are you sure you want to delete this book?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
</section>